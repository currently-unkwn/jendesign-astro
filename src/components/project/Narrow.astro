---
// Tools
import { type ImageMetadata } from "astro";
import { getRatio } from "@/lib/helpers";

// Compositions
import Frame from "../compositions/Frame.astro";

// Components
import MyPicture from "../ui/MyPicture.astro";
import ImageGrid from "./ImageGrid.astro";

interface Props {
  src: ImageMetadata;
  alt?: string;
  orientation?: "landscape" | "portrait" | "wide" | "square";
}

const { src, alt = "Project image", orientation = "portrait" } = Astro.props;

const ratio = getRatio(orientation);
---

<ImageGrid>
  <Frame
    ratio={ratio}
    class="col-12 tablet-s:col-6 col-start-1 tablet-s:col-start-4"
  >
    <!-- w: 600, double: 1200 -->
    <MyPicture src={src} alt={alt} />
  </Frame>
</ImageGrid>

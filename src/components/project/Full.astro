---
// Tools
import { type ImageMetadata } from "astro";
import { getRatio } from "@/lib/helpers";

// Compositions
import Frame from "../compositions/Frame.astro";

// Components
import MyPicture from "../ui/MyPicture.astro";
import ImageGrid from "./ImageGrid.astro";

interface Props {
  src: ImageMetadata;
  alt?: string;
  orientation?: "landscape" | "portrait" | "wide" | "square";
}

const { src, alt = "Project image", orientation = "wide" } = Astro.props;

const ratio = getRatio(orientation);
---

<ImageGrid>
  <Frame ratio={ratio} class="col-12">
    <!-- w: 1400, double: 2800 -->
    <MyPicture src={src} alt={alt} />
  </Frame>
</ImageGrid>

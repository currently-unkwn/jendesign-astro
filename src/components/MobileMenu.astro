---
import CloseButton from "./CloseButton.astro";
import Stack from "./compositions/Stack.astro";
import Copyright from "./Copyright.astro";
import Logo from "./Logo.astro";
import MobileNav from "./MobileNav.astro";
import Socials from "./Socials.astro";
---

<div class="mobile-menu">
  <div class="wrapper">
    <Logo name="mobile-logo" color="secondary" class="mobile-logo" />

    <div class="filler"></div>

    <MobileNav />

    <footer>
      <Stack space="space-4">
        <Socials />

        <Copyright />
      </Stack>
    </footer>

    <div class="close-wrapper">
      <CloseButton />
    </div>
  </div>
</div>

<style>
  @import "@styles/04-utilities/breakpoints.css";

  .mobile-menu {
    height: 100%;
    color: var(--color-secondary);
  }

  .wrapper {
    position: relative;

    display: flex;
    flex-direction: column;
    align-items: center;

    padding: var(--space-7-fixed) 0;

    height: 100%;
    text-align: center;

    @media (--laptop-and-up) {
      flex-direction: row;

      text-align: left;
    }

    @media (--desktop-and-up) {
      padding: 0;
    }
  }

  .mobile-logo {
    flex: 1;

    @media (--laptop-and-up) {
      display: none;
    }
  }

  .filler {
    @media (--laptop-and-up) {
      flex: 1;
    }
  }

  footer {
    flex: 1;

    display: flex;
    flex-direction: column;
    justify-content: flex-end;

    @media (--laptop-and-up) {
      display: none;
    }
  }

  .close-wrapper {
    position: absolute;
    top: 0;
    right: 2px;
    /* top: 10px; */
    /* right: 16px; */

    display: flex;
    gap: 2px;
    align-items: center;
    /* padding: 16px; */

    padding-block-start: 36px;

    @media (--laptop-and-up) {
      position: static;
      padding-top: 0;
      flex: 1;

      justify-content: end;
    }
  }
</style>

<script>
  import { getBasePath } from "@/lib/helpers";

  const { pathname } = window.location;

  // Select nav links based on pathname
  const activeNavigationElements = [
    ...document.querySelectorAll(
      `.site-nav a[href="${getBasePath(pathname)}"]`
    ),
  ];

  // Set active class on corresponding link
  activeNavigationElements.forEach((navElement) => {
    if (navElement) {
      navElement.classList.add("active");
    }
  });
</script>

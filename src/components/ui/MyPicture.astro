---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

type Props = {
  src: ImageMetadata;
  alt: string;
  width?: number;
  class?: string;
};
const { src, alt, width, class: classList } = Astro.props;
---

<Picture
  class:list={[classList]}
  src={src}
  alt={alt}
  width={width}
  formats={["avif", "webp"]}
  densities={[1.5, 2]}
/>
